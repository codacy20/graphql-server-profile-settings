datasource db {
  provider = "mongodb"
  url      = "mongodb://root:rootpassword@localhost:27017/profiles?authSource=admin&retryWrites=false"
}

generator client {
  provider        = "prisma-client-js"
  previewFeatures = ["mongoDb"]
}

model Profile {
  id        String   @default(dbgenerated()) @db.ObjectId
  userName  String   @id @map("_id")
  firstName String?
  lastName  String?
  location  String?
  bio       String?
  links     String[]
}
